{% extends "master" %}

{% block content %}
    <div class="container">
      <div class="card large">
        <div class="card-content">
        <form class="form login-form" action="/login" method="post">
          {{ csrfField }}

            <h2 class="title card-title">Login to your account:</h2>
            <div class="form__field">
              <label for="email" class='form__field--label'>Email:</label>
              <input type="text" name='email' value="{{ old('email') }}" class='form__field--input'>
            </div>

            <div class="form__field">
              <label for="password" class='form__field--label'>Password:</label>
              <input type="password" name="password" class='form__field--input'>
            </div>

            <div class="form__controls">
              <a href="/" class='waves-effect waves-light btn grey'>CANCEL</a>
              <button type="submit" name="submit" class='btn waves-effect waves-light orange darken-3'>SUBMIT</button>
            </div>
          </div>
        </form>
      </div>
    </div>
{% endblock %}
