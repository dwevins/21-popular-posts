<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

  <title>Popular Posts</title>

  <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,200,300,600,700,900' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" type="text/css" href="/dist/app.css">
</head>
<body>

  <section>
    <div class="__wrapper">
      {% block header %}
        <div class="header">
          <div class="container">
            <div class="header-contents">
              <h3 class="title">Popular Posts</h3>
              <div class="header-contents__links">
                <a href="/login">Login</a>
                <a href="/register">Register</a>
              </div>
            </div>
          </div>
        </div>
      {% endblock %}

      {% block content %}

      {% endblock %}

      {% block footer %}
        <div class="footer">
          <div class="container">
            <div class="footer-top">
                <h3 class="disclaimer"></h3>
            </div>
            <div class="footer-bottom">
              <p class="copyright">&copy; 2016 copyright text</p>
              <a href="#" class="more-links">More Links</a>
            </div>
          </div>
        </div>
      {% endblock %}
    </div>
  </section>

</body>
</html>
