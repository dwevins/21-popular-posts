<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

  <title>Popular Posts</title>

  <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,200,300,600,700,900' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" type="text/css" href="/dist/app.css">
</head>
<body>

  <section>
    <div class="__wrapper">
      {% block header %}
        <div class="header">
          <div class="container">
            <div class="header-contents">
              <h3 class="title">Popular Posts</h3>
              <div class="header-contents__links">
                {% if currentUser %}
                  <a href="/posts">Posts</a>
                  <a href="/logout">Logout</a>
                {% else %}
                  <a href="/login">Login</a>
                  <a href="/register">Register</a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      {% endblock %}

      <div class="content">
        {% block content %}
        {#  defined in other views #}
        {% endblock %}
      </div>

      {% block footer %}
        <div class="footer">
            <div class="footer-top">
              <div class="container">
                <h3 class="disclaimer">Definitely not a reddit clone</h3>
              </div>
            </div>
            <div class="footer-bottom">
              <div class="container">
                <div class="footer-bottom__content">
                  <p class="copyright">&copy; 2016 copyright text</p>
                  <a href="#" class="more-links">More Links</a>
                </div>
              </div>
            </div>
        </div>
      {% endblock %}
    </div>
  </section>

</body>
</html>
