{% extends "master" %}

{% block content %}
  <div class="container">
    <div class="row">
      <h2 class="page-title">new post</h2>
      <form action="/post" method='post' class="form new-post-form">
        {{ csrfField }}
        <div class="form__field">
          <label for="title" class="form__field--label">Title:</label>
          <input type="text" name="title" value="{{ old('title') }}" class="form__field--input">
        </div>

        <div class="form__field">
          <label for="body" class="form__field--label">Post:</label>
          <input type="textarea" name="body" value="{{ old('body') }}" class="form__field--input">
        </div>

        <div class="form__controls">
          <a href="/post" class="btn__cancel">CANCEL</a>
          <button type='submit' class="btn__submit" name='submit'>SUBMIT</button>
        </div>
      </form>
      <a href="/post" class="cancel-link">back</a>
    </div>
  </div>
{% endblock %}
