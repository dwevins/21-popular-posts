{% extends "master" %}

{% block content %}
  <div class="container">
      <div class="row">
      <div class="title-row post-item">
          <h2 class="page-title">posts</h2>
          <a href="/post/create">
            <i class="create-link fa fa-plus small"></i>
          </a>
        </div>
        <div class="post-row">
          {% for post in posts %}
            <div class="post-item">
              <div class="post-item__left">
                <i class="fa fa-thumbs-up post-item__left--btn small"></i>
                <h4 class="post-item__left--rating">{{ post.rating }}</h4>
                <i class="fa fa-thumbs-down post-item__left--btn small"></i>
              </div>
              <div class="post-item__right">
                <h4 class="post-item__right--title">{{ post.title }}</h4>
                <p class="post-item__right--owner">
                  By {{ post.user.username }} -
                  <a href="/post" class='read-more'>Read More</a>
                </p>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
  </div>
{% endblock %}
